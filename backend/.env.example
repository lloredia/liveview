# Live View - Environment Configuration
# Copy to .env and fill in your values

# ── PostgreSQL ─────────────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=liveview
POSTGRES_USER=liveview
POSTGRES_PASSWORD=liveview_dev_password

# ── Redis ──────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── Provider API Keys ──────────────────────────────────
# ESPN (free, no key required)
ESPN_BASE_URL=https://site.api.espn.com/apis/site/v2/sports

# Sportradar (requires API key — https://developer.sportradar.com)
SPORTRADAR_API_KEY=
SPORTRADAR_BASE_URL=https://api.sportradar.us

# TheSportsDB (free tier key = "2")
THESPORTSDB_API_KEY=2
THESPORTSDB_BASE_URL=https://www.thesportsdb.com/api/v1/json

# ── API Service ────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# ── Logging ────────────────────────────────────────────
LOG_LEVEL=info
LOG_FORMAT=json

# ── Rate Limits ────────────────────────────────────────
ESPN_RPM_LIMIT=300
SPORTRADAR_RPM_LIMIT=100
THESPORTSDB_RPM_LIMIT=60
